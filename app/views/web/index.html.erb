  <div>
    <%= render 'layouts/slider' %>
  </div>
<div id="web-index">
  <div class="row">
    <div class="col-2 sidebar-responsive">
      <div class="sidebar-pc"><%= render partial: "layouts/sidebar", locals: { categories: @categories, major_category_names: @major_category_names } %></div>
      <div class="sidebar-sp"><%= render partial: "layouts/sidebar_sp", locals: { categories: @categories, major_category_names: @major_category_names } %></div>
    </div>
  
      <div class="col-9 products-area">
    
         <h1 class="main-title">注目の新着商品</h1>
        <div class="row">
         <% @recently_products.each do |recently_product| %>
          <div class="col-md-3 col-6">
            <%= link_to product_path(recently_product) do %>
              <% if recently_product.image.attached? %>
               <%= image_tag recently_product.image, class: "img-thumbnail" %>
             <% else %>
               <%= image_tag "/images/dummy.png", class: "img-thumbnail" %>
             <% end %>
            <% end %>
            <div class="row">
              <div class="col-12">
                <p class="delimarche-product-level mt-2">
                  <%= recently_product.shop_name %></p>
                <p class="delimarche-product-level mt-2">
                  <%= recently_product.name %>
                  <label>￥<%= recently_product.price %>
                </p>
              </div>
             </div>
           </div>
          <% end %> 
        </div>
    
        <h1 class="main-title">おすすめ商品</h1>
        <div class="row">
          <% @recommend_products.each do |recommend_product| %>
          <div class="col-md-4 col-6">
            <%= link_to product_path(recommend_product) do %>
              <% if recommend_product.image.attached? %>
               <%= image_tag recommend_product.image, class: "img-thumbnail" %>
              <% else %>
               <%= image_tag "/images/dummy.png", class: "img-thumbnail" %>
              <% end %>
            <% end %>
            <div class="row">
              <div class="col-12">
                <p class="delimarche-product-level mt-2">
                  <%= recommend_product.name %>
                  <label>￥<%= recommend_product.price %>
                </p>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
<div class="page-top"><a href="#"><%= image_tag "/images/page-top.gif"%></a></div>
